<%# encoding: utf-8 %>
<% assets ||= @assets %>
<div id="<%=asset_id%>">
<% if Array(assets).empty? %>
    <%= render :partial => "acts_as_assets/assets/upload_link", :locals => {:multiple => false, :model => model} %>
<% else %>
    <%= render :partial => "acts_as_assets/assets/assets", :locals => {:assets => Array(assets), :model => model} %>
<% end %>
</div>

<%# encoding: utf-8 %>
<% assets ||= @assets %>
<div id="<%=asset_id%>" class="multiple assets">
    <h1>***<%= read_only %>***</h1>
<% if Array(assets).empty? %>
    <%= render :partial => "acts_as_assets/assets/upload_link", :locals => {:multiple => false, :model => model} unless read_only %>
<% else %>
    <%= render :partial => "acts_as_assets/assets/assets", :locals => {:assets => Array(assets), :model => model, read_only: read_only} %>
<% end %>
</div>
